@model IEnumerable<quintogiorno.Models.Anagrafica>

@{
    ViewData["Title"] = "Anagrafica Trasgressori";
}

<h1>Anagrafica Trasgressori</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Aggiungi Trasgressore</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDAnagrafica</td>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.Indirizzo</td>
                <td>@item.Citta</td>
                <td>@item.CAP</td>
                <td>@item.Cod_Fisc</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IDAnagrafica" class="btn btn-warning">Modifica</a>
                    <a asp-action="Details" asp-route-id="@item.IDAnagrafica" class="btn btn-info">Dettagli</a>
                    <a asp-action="Delete" asp-route-id="@item.IDAnagrafica" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
