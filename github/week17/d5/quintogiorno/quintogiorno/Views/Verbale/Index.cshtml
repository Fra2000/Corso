@model IEnumerable<quintogiorno.Models.Verbale>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataViolazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IndirizzoViolazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nominativo_Agente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataTrascrizioneVerbale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DecurtamentoPunti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDAnagrafica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDViolazione)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataViolazione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IndirizzoViolazione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nominativo_Agente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataTrascrizioneVerbale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Importo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecurtamentoPunti)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDAnagrafica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDViolazione)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IDVerbale" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IDVerbale" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IDVerbale" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
