@model quintogiorno.Models.TipoViolazione

@{
    ViewData["Title"] = "Conferma Eliminazione";
}

<h1>@ViewData["Title"]</h1>

<h3>Sei sicuro di voler eliminare questo elemento?</h3>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="IDViolazione" />
    <button type="submit" class="btn btn-danger">Elimina</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
