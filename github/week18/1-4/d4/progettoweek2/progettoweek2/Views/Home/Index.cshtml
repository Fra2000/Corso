@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login and Register</title>
</head>
<body>
    <h1>Login</h1>
    @if (ViewBag.Error != null)
    {
        <p style="color: red">@ViewBag.Error</p>
    }
    @if (ViewBag.Message != null)
    {
        <p style="color: green">@ViewBag.Message</p>
    }

    <form method="post" action="/Home/Login">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>

    <h1>Register</h1>
    <form method="post" action="/Home/Register">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <input type="text" name="ruolo" placeholder="Role (e.g., User, Admin)" required>
        <input type="text" name="nome" placeholder="First Name" required>
        <input type="text" name="cognome" placeholder="Last Name" required>
        <button type="submit">Register</button>
    </form>
</body>
</html>
