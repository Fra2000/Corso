@{
}
@model IEnumerable<primogiorno.Models.foodItem>

<h2>Menu</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Prezzo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>€ @item.Price</td>
                <td>
                    <a asp-action="Order" asp-route-id="@item.Id" class="btn btn-primary">Ordina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
