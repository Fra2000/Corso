@model Product

@{
    ViewData["Title"] = "Aggiungi Prodotto";
}

<div class="container mt-5 p-5 bg-dark text-white rounded border border-white border-3">
    <div class="text-center"> <h2 class="mb-4">Aggiungi Prodotto</h2>
</div>

    <form asp-controller="Product" asp-action="Add" method="post">
        <div class="form-group my-2">
            <label asp-for="Name">Nome Prodotto</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Price">Prezzo</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Description">Descrizione</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="text-center"> <button type="submit" class="btn btn-success text-white mt-4">Aggiungi</button></div>
    </form>
</div>
