@model _1BW_BE.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bgcard">
            <div class="card my-4 text-center bgcard text-light">
                <h1 class="text-center">@ViewData["Title"]</h1>
                <h3 class="text-center text-danger">Are you sure you want to delete this product?</h3>
                <div class="card my-4   bgcard ">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Name</h4>
                        <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                        <p class="card-text"><strong>Brand:</strong> @Model.Brand</p>
                        <p class="card-text"><strong>Quantity:</strong> @Model.Quantity</p>
                    </div>
                </div>

                <div class="card-body bgcard">
                    <h3 class="card-title">Images</h3>
                    <div class="d-flex flex-wrap justify-content-center">
                        @foreach (var image in Model.Images)
                        {
                            <div class="m-2">
                                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(image.ImageData))" alt="Product Image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                            </div>
                        }
                    </div>
                </div>
            </div>

            <form asp-action="DeleteProduct" method="post" class="text-center my-4">
                <input type="hidden" name="id" value="@Model.ProductId" />
                <button type="submit" class="btn btn-danger mx-2">Delete</button>
                <a class="btn btn-secondary mx-2" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
