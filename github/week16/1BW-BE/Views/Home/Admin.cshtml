@model IEnumerable<_1BW_BE.Models.Product>

@{
    ViewData["Title"] = "Administrative section";
}
@section Styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}
<h1 class="text-center text-white">@ViewData["Title"]</h1>

<p class=" position-sticky top-0 ">
    <a class="btn btnOroange border-1 border-light " asp-action="Create">Create New Product</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered tabBg text-white">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Brand</th>
                <th scope="col">Seller</th>
                <th scope="col">Available</th>
                <th scope="col">Quantity</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Images != null && item.Images.Any())
                        {
                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Images.First().ImageData))"
                                class="cardAd-img-top card-img" alt="Product Image" style="width: 100px; height: auto;" />
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Brand</td>
                    <td>@item.Seller</td>
                    <td>@(item.Available ? "Yes" : "No")</td>
                    <td>@item.Quantity</td>
                    <td>
                        <div class="d-flex flex-column justify-content-between">
                            <a class="btn btnOroange border-1 border-light mb-1" asp-action="Details"
                                asp-route-id="@item.ProductId">Details</a>
                            <a class="btn btnOroange border-1 border-light mb-1" asp-action="Edit"
                                asp-route-id="@item.ProductId">Edit</a>
                            <a class="btn btn-dark border-1 border-light" asp-action="DeleteProduct"
                                asp-route-id="@item.ProductId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

