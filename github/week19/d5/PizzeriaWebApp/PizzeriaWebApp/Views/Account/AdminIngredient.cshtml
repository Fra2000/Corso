@model PizzeriaWebApp.Models.AdminProductViewModel

@{
    ViewData["Title"] = "Manage Ingredients";
}

<h2>Manage Ingredients</h2>

<h3>Add New Ingredient</h3>
<form asp-action="AdminIngredient" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="NewIngredient.Name">Ingredient Name</label>
        <input asp-for="NewIngredient.Name" class="form-control" />
        <span asp-validation-for="NewIngredient.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewIngredient.Description">Description</label>
        <input asp-for="NewIngredient.Description" class="form-control" />
        <span asp-validation-for="NewIngredient.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Ingredient</button>
</form>

<h3>Ingredient List</h3>
<ul>
    @foreach (var ingredient in Model.Ingredients)
    {
        <li>@ingredient.Name</li>
    }
</ul>
